{
  "name": "live-cluster",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "fbgraph": "^1.4.4",
    "google-auth-library": "^1.6.1",
    "googleapis": "^32.0.0"
  },
  "devDependencies": {
    "@material-ui/core": "^1.4.2",
    "@material-ui/icons": "^2.0.0",
    "electron": "^1.7.12",
    "electron-builder": "^20.28.4",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-scripts": "^1.1.0",
    "youtube-player": "^5.5.0"
  },
  "homepage": "./",
  "main": "./src/app.js",
  "scripts": {
    "pack": "build --dir",
    "dist": "build -mwl",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "electron": "electron ."
  },
  "build": {
    "appId": "live-cluster",
    "asar": true,
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories":{
      "buildResources": "static"
    },
    "mac": {
      "target": "zip"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "NSIS",
      "icon": "build/icon.ico"
    }
  }
}
